{
    "extends": "tslint:recommended",
    "rules": {
        "interface-name": false,
        "member-access": [
            true,
            "no-public"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "object-literal-sort-keys": false,
        "max-line-length": [
            true,
            240
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "no-console": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "only-arrow-functions": false
    }
}
